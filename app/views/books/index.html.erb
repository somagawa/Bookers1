<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<span><%= link_to "Show", book_path(book) %></span>
				<span><%= link_to "Edit", edit_book_path(book) %></span>
				<span><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか?" %></span>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h1>New book</h1>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit "Create Book" %>
<% end %>